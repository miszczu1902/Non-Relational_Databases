<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="TEST_HOTEL" transaction-type="RESOURCE_LOCAL">
        <class>model.Address</class>
        <class>model.Client</class>
        <class>model.Reservation</class>
        <class>model.Room</class>
        <class>model.Basic</class>
        <class>model.Extended</class>
        <class>model.Deluxe</class>
        <class>model.EquipmentType</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <shared-cache-mode>NONE</shared-cache-mode>
        <validation-mode>CALLBACK</validation-mode>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/nbddb"/>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="nbd"/>
            <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property
                    name="jakarta.persistence.schema-generation.database.action"
                    value="drop-and-create"/>
            <property name="hibernate.connection.isolation" value="4"/>
        </properties>
    </persistence-unit>
</persistence>
